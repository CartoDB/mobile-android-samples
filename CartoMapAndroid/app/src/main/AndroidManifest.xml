<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carto.cartomap.android">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".map.CartoMapApplication">

        <activity android:name=".LauncherListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".map.CartoSQLActivity" />
        <activity android:name=".map.CartoUTFGridActivity" />
        <activity android:name=".map.CartoTorqueActivity" />
        <activity android:name=".map.CartoVectorTileActivity" />
        <activity android:name=".map.CartoRasterTileActivity" />
        <activity android:name=".map.CartoVisJSONActivity" />

    </application>

</manifest>