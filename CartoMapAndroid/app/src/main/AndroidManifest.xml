<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carto.cartomap.android">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".MapApplication">

        <activity android:name=".list.LauncherListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Section 1-->
        <activity android:name=".sections.cartojsapi.CountriesVisMapActivity" />
        <activity android:name=".sections.cartojsapi.DotsVisMapActivity" />
        <activity android:name=".sections.cartojsapi.FontsVisMapActivity" />

        <!--Section 2-->
        <activity android:name=".sections.importapi.TilePackagerActivity"/>

        <!--Section 3-->
        <activity android:name=".sections.mapsapi.AnonymousMapActivity" />
        <activity android:name=".sections.mapsapi.NamedMapActivity" />
        <activity android:name=".sections.mapsapi.RasterMapActivity" />

        <!--Section 4-->
        <activity android:name=".sections.sqlapi.SQLServiceActivity"/>

        <!--Section 5-->
        <activity android:name=".sections.torqueapi.TorqueShipActivity" />

        <!--TODO REMOVE-->
        <activity android:name="._old.CartoSQLMapActivity" />
        <activity android:name="._old.CartoUTFGridMapActivity" />
        <activity android:name="._old.CartoRasterTileMapActivity" />

    </application>

</manifest>