<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carto.advanced.kotlin">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ADVANCED MAP"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sections.base.styles.StyleChoiceActivity" />
        <activity android:name=".sections.base.citydownload.CityDownloadActivity" />
        <activity android:name=".sections.base.editing.EditingActivity" />
        <activity android:name=".sections.base.gpslocation.GPSLocationActivity" />
        <activity android:name=".sections.base.packagedownload.PackageDownloadActivity" />
        <activity android:name=".sections.base.routedownload.RouteDownloadActivity" />
        <activity android:name=".sections.base.vectorelement.VectorElementActivity" />
        <activity android:name=".sections.base.clustering.ClusteringActivity"/>
    </application>

</manifest>